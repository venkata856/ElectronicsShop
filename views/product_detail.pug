extends layout

block content
  h1 Title: #{product.name}
  div.productSection
    div.productImage
      if product.image === 'NA'
        img(src='https://picsum.photos/200')
      else
        - var u = product.image.contentType
        - var v = product.image.data.toString('base64')
        img(src='data:image/'+u+';base64,'+v)

    div.productDescription
      p #{product.description}
      p 
        a(href=product.brand.url) #{product.brand.name}
      p
        a(href=product.category.url) #{product.category.name}
      p #[strong Available]  #{product.quantity}

  p
    a(href=product.url+'/delete') Delete Product
  p
    a(href=product.url+'/update') Update Product
